{
  "host": {
    "logLevel": "info",
    "container": {
      "mode": "daemon",
      "privileged": true,
      "instanceId": ""
    },
    "metrics": {
      "port": 3001,
      "enabled": true
    },
    "dashboard": {
      "enabled": true,
      "port": 3002
    },
    "memory": {
      "embeddings": {
        "enabled": true
      }
    },
    "routing": {
      "model": "moonshotai/kimi-k2.5",
      "fallbacks": ["anthropic/claude-sonnet-4-5", "openai/gpt-4.1"],
      "maxOutputTokens": 4096,
      "maxToolSteps": 50,
      "temperature": 0.2,
      "recallMaxResults": 8,
      "recallMaxTokens": 1500
    },
    "streaming": {
      "enabled": true,
      "chunkFlushIntervalMs": 200,
      "editIntervalMs": 400,
      "maxEditLength": 3800
    },
    "toolBudgets": {
      "enabled": false
    }
  },
  "agent": {
    "assistantName": "Rain",
    "reasoning": { "effort": "low" },
    "promptPacks": {
      "enabled": true
    },
    "tools": {
      "enableBash": true,
      "enableWebSearch": true,
      "enableWebFetch": true
    }
  }
}
