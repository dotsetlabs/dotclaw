{
  "host": {
    "logLevel": "info",
    "container": {
      "mode": "daemon"
    },
    "metrics": {
      "port": 3001,
      "enabled": true
    },
    "dashboard": {
      "enabled": true
    },
    "memory": {
      "embeddings": {
        "enabled": true
      }
    },
    "backgroundJobs": {
      "enabled": true,
      "maxConcurrent": 2,
      "maxRuntimeMs": 2400000,
      "autoSpawn": {
        "enabled": true,
        "foregroundTimeoutMs": 180000,
        "onTimeout": true,
        "onToolLimit": true,
        "classifier": {
          "enabled": true,
          "model": "openai/gpt-5-nano",
          "timeoutMs": 3000,
          "maxOutputTokens": 32,
          "temperature": 0,
          "confidenceThreshold": 0.6
        }
      }
    }
  },
  "agent": {
    "assistantName": "Rain",
    "promptPacks": {
      "enabled": true
    },
    "planner": {
      "enabled": true,
      "mode": "auto"
    }
  }
}
