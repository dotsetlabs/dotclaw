{
  "name": "@dotsetlabs/dotclaw",
  "version": "1.7.0",
  "description": "Personal OpenRouter-based assistant. Lightweight, secure, customizable.",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "dotclaw": "./dist/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dotsetlabs/dotclaw.git"
  },
  "keywords": [
    "ai",
    "assistant",
    "openrouter",
    "telegram",
    "agent",
    "llm"
  ],
  "files": [
    "dist",
    "container/Dockerfile",
    "container/build.sh",
    "container/.dockerignore",
    "container/skills",
    "container/agent-runner/package.json",
    "container/agent-runner/package-lock.json",
    "container/agent-runner/tsconfig.json",
    "container/agent-runner/src",
    "scripts/init.js",
    "scripts/bootstrap.js",
    "scripts/configure.js",
    "scripts/doctor.js",
    "scripts/autotune.js",
    "scripts/install.sh",
    "config-examples",
    "launchd",
    "systemd",
    ".env.example"
  ],
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "dev:up": "npm run dev:down && npm run build:container && npm run dev",
    "dev:down": "docker rm -f $(docker ps -aq --filter name=dotclaw-agent) 2>/dev/null; echo 'Cleaned up dotclaw containers.'",
    "build:agent": "cd container/agent-runner && npm run build",
    "build:container": "npm run build:agent && ./container/build.sh",
    "build:all": "npm run build && npm run build:container",
    "typecheck": "tsc --noEmit",
    "init": "node scripts/init.js",
    "bootstrap": "node scripts/bootstrap.js",
    "configure": "node scripts/configure.js",
    "doctor": "node scripts/doctor.js",
    "autotune": "node scripts/autotune.js",
    "lint": "eslint . --max-warnings=0",
    "test": "npm run build && node --test test/**/*.test.js && npm run test:agent-runner",
    "test:agent-runner": "node scripts/test-agent-runner.js",
    "prepublishOnly": "npm run build && npm run lint && npm test",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "dependencies": {
    "@dotsetlabs/autotune": "^1.1.0",
    "better-sqlite3": "^11.8.1",
    "cron-parser": "^5.5.0",
    "dotenv": "^17.2.3",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "prom-client": "^15.1.3",
    "telegraf": "^4.16.3",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.10.0",
    "eslint": "^9.19.0",
    "globals": "^15.14.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.23.0",
    "vitepress": "^1.2.0"
  },
  "engines": {
    "node": ">=20"
  },
  "publishConfig": {
    "access": "public"
  }
}
